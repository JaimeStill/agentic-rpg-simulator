{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RPG Scenario Configuration",
  "description": "Configuration structure for adventure scenarios",
  "type": "object",
  "required": [
    "number_of_agents",
    "number_of_events", 
    "theme",
    "scenario",
    "max_event_tokens",
    "action_cost",
    "mechanic_cost",
    "description_budget",
    "complexity_mix"
  ],
  "properties": {
    "number_of_agents": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6,
      "description": "Number of player characters in the adventure"
    },
    "number_of_events": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "description": "Total number of events planned for the adventure"
    },
    "theme": {
      "type": "string",
      "maxLength": 100,
      "description": "Overall theme or genre of the adventure",
      "examples": [
        "Fantasy Adventure",
        "Cyberpunk Thriller", 
        "Space Opera",
        "Urban Mystery"
      ]
    },
    "scenario": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of the adventure premise"
    },
    "max_event_tokens": {
      "type": "integer",
      "minimum": 500,
      "maximum": 5000,
      "description": "Maximum tokens allowed per event"
    },
    "action_cost": {
      "type": "integer",
      "minimum": 50,
      "maximum": 500,
      "description": "Token cost per character action"
    },
    "mechanic_cost": {
      "type": "integer",
      "minimum": 50,
      "maximum": 500,
      "description": "Token cost per mechanic resolution"
    },
    "description_budget": {
      "type": "integer",
      "minimum": 100,
      "maximum": 1000,
      "description": "Token budget for event setup descriptions"
    },
    "complexity_mix": {
      "type": "object",
      "required": ["low", "medium", "high"],
      "properties": {
        "low": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage of low complexity events"
        },
        "medium": {
          "type": "integer", 
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage of medium complexity events"
        },
        "high": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage of high complexity events"
        }
      },
      "additionalProperties": false
    },
    "character_evolution_rate": {
      "type": "string",
      "enum": ["slow", "moderate", "fast"],
      "description": "How quickly characters develop and change"
    },
    "world_persistence": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "How much consequences carry forward between events"
    },
    "mechanic_learning": {
      "type": "boolean",
      "description": "Whether game systems adapt based on player patterns"
    },
    "store_event_logs": {
      "type": "boolean",
      "description": "Whether to save detailed event transcripts"
    },
    "log_format": {
      "type": "string",
      "enum": ["json", "yaml", "markdown"],
      "description": "Format for saved event logs"
    },
    "log_detail_level": {
      "type": "string",
      "enum": ["minimal", "standard", "verbose"],
      "description": "Amount of detail in saved logs"
    },
    "major_factions": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "description": "Key factions or groups in the adventure"
    },
    "plot_threads": {
      "type": "array", 
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "description": "Potential story complications and developments"
    },
    "key_locations": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "description": "Important places that may appear in the adventure"
    },
    "evolution_paths": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "description": "Potential character development arcs"
    },
    "generation_mode": {
      "type": "string",
      "enum": ["Manual", "Guided", "Automatic"],
      "description": "How this scenario was created"
    },
    "generation_date": {
      "type": "string",
      "format": "date",
      "description": "When this scenario was generated"
    },
    "scenario_author": {
      "type": "string",
      "maxLength": 50,
      "description": "Who created this scenario"
    },
    "difficulty_rating": {
      "type": "string",
      "enum": ["Easy", "Moderate", "Challenging", "Hard", "Extreme"],
      "description": "Expected difficulty level"
    }
  },
  "additionalProperties": true
}